{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": ["src", "./index.ts"],
    "exclude": ["node_modules", "**/*.test.ts", "**/mock-request.ts"]
}
